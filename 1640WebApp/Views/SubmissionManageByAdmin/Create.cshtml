@model _1640WebApp.Data.Submission
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<style>
    .contain-create {
        background-image: url("/images/wp4003779.webp");
        object-fit: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
        position: fixed;
        top: 57px;
        right: 0;
        left: 0;
        bottom: 0;
        overflow-y: scroll !important;
    }

    .overlay {
        position: fixed;
        top: 57px;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #333;
        opacity: 0.7;
    }

    .form-control {
        background-color: unset !important;
    }

</style>

<div class="contain-create">
    <div class="overlay"></div>
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6" style="position: absolute;top:55px; color: white;">
                    <div class="card" style="border-radius: 15px; background-color:unset; border: 0;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create Submission</h2>

                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline mb-4 mt-3">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control text-white" aria-required="true" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4 mt-3">
                                    <label asp-for="Description"></label>
                                    <input asp-for="Description" class="form-control text-white" aria-required="true" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4 mt-3">
                                    <label asp-for="ClosureDate"></label>
                                    <input asp-for="ClosureDate" class="form-control text-white" aria-required="true" />
                                    <span asp-validation-for="ClosureDate" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4 mt-3">
                                    <label asp-for="FinalClosureTime"></label>
                                    <input asp-for="FinalClosureTime" class="form-control text-white" aria-required="true" />
                                    <span asp-validation-for="FinalClosureTime" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4 mt-3">
                                    <label asp-for="IsClosed" class="control-label"></label>
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="IsClosed" /> Is Closed
                                        </label>
                                    </div>
                                    <span asp-validation-for="IsClosed" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-center mb-5 mt-5">

                                    <button type="submit" class="btn-lg btn-block text-white btn" style="background-color: #9a9fa3;">Create</button>
                                </div>

                                <p style="text-align: center;">View List of Submission? <a asp-action="Index" class="link-info">Back to List</a></p>


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
