
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Index</title>
    <style>
        body{
            margin: 0;
        }

        .image-container {
            width: 100vw; 
            height: 100vh;
            position: relative;
        }

        .logo{
            width: 250px;
            margin-bottom: 20px;
        }

        .background {
            width :100%;
            height: 100%;
            object-fit: cover;
        }

        h1{
            margin:0;
            font-family: 'Times New Roman';
        }

        

        

        
    </style>
</head>
<body>
    <div class="image-container">
        <img class="background" src="~/images/greenwich.jfif" />
        <div class="text" >
            <img class="logo" src="~/images/logo1-removebg-preview.png" />
            <h1 style="font-size:70px" class="welcome">Welcome</h1>
            <h1 class="welcome-to" style="margin-top: 20px">To Idea Collection System</h1>
            <button onClick="location.href='/Identity/Account/Register'" class="btn btn-secondary btn-lg gradient-custom-4 me-3 mt-5">Register</button>
            <button onClick="location.href='/Identity/Account/Login'" class="btn btn-secondary btn-lg gradient-custom-4 ms-3 mt-5">Login</button>
            
        </div>
        
    </div>
</body>
</html>
