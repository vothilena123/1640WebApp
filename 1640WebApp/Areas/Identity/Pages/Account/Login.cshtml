@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Index</title>
    <style>
        .form-container {
            width: 100vw;
            height: 100vh;
            position: relative;
        }

        .background {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        h2 {
            color: #fff;
        }

        .justify-content {
            justify-content: space-around;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #333;
            opacity: 0.7;
        }

        .color-white {
            color: white;
        }

        .form-control {
            background-color: unset !important;
        }

    </style>
</head>
<body>
    <div class="form-container position-fixed">
        <img class="background" src="~/images/greenwich1.jfif" />
       
        <div class="overlay"></div>
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6" style="position: absolute;top:55px; color: white;">
                        <div class="card" style="border-radius: 15px; background-color:unset; border: 0;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Account Login</h2>

                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Email" class="form-control text-white" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Password" class="form-control text-white" autocomplete="current-password" aria-required="true" />
                                        <label asp-for="Input.Password" class="form-label"></label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        
                                    </div>

                                    <div>
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>


                                    <div class="d-flex justify-content">

                                        <button id="registerSubmit" type="submit" class="btn btn-lg btn-block color-white btn-info">Login</button>
                                    </div>

                                    <p class="small pb-lg-2" style="padding-top: 50px; text-align: center;"><a class="text-muted" style="color:#a4b2be!important;" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a></p>
                                    <p class="small mb-5 pb-lg-2" style="padding-top: 10px; text-align: center;"><a class="text-muted" style="color:#a4b2be!important;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend Email Confirmation</a></p>

                                    <p style="text-align: center;">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-info">Register here</a></p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>

