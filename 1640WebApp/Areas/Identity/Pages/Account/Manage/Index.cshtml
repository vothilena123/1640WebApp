@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    input{
        color: white!important;

    }
    label{
        color: white!important;
    }
</style>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    @if (!string.IsNullOrEmpty(Model.Input.Image))
    {
        <div class="col-md-4">
            <img src="/uploads/@Model.Input.Image" style="width: 250px; height:300px">
        </div>
    }
    <div class="col-md-6 ">
        <form id="profile-form" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating ">
                <input asp-for="Username" class="form-control" style="background-color:unset" disabled />
                <label asp-for="Username" class="form-label "></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.FirstName" class="form-control text-white" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.FirstName" class="text-while"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.LastName" class="form-control text-white" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.LastName" class="text-white"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Fullname_" class="form-control text-white" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.Fullname_" class="text-white"></label>
                <span asp-validation-for="Input.Fullname_" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.StaffNumber" class="form-control text-while" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.StaffNumber" class="text-while"></label>
                <span asp-validation-for="Input.StaffNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.Address" class="form-control text-while" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.Address" class="text-while"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.HomeTown" class="form-control text-while" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.HomeTown" class="text-while"></label>
                <span asp-validation-for="Input.HomeTown" class="text-danger"></span>
            </div> 
            <div class="form-floating mt-2">
                <input asp-for="Input.SocialMedia" class="form-control text-while" aria-required="true" style="background-color:unset" />
                <label asp-for="Input.SocialMedia" class="text-while"></label>
                <span asp-validation-for="Input.SocialMedia" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.PhoneNumber" class="form-control text-while" style="background-color:unset" />
                <label asp-for="Input.PhoneNumber" class="form-label text-while"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-2 mt-2">
                
                <input asp-for="Input.ImageFile" class="form-control text-while" />

            </div>
            <button id="update-profile-button" type="submit" class="float-end btn btn-lg btn-secondary text-white">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
