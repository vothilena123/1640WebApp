@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<style>
    

</style>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group">
                    <input asp-for="Email" class="form-control text-white mb-3" disabled style="background-color: unset" />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label text-white"></label>
                </div>
            }
            else
            {
                <div class="form-floating">
                    <input asp-for="Email" class="form-control text-white mt-3 mb-3" disabled style="background-color: unset" />
                    <label asp-for="Email" class="form-label text-white"></label>
                    <button style="color: #fff;text-decoration: none;" id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">
                        Send verification email
                    </button>
                </div>
            }
            <div class="form-floating">
                <input asp-for="Input.NewEmail" class="form-control text-white" autocomplete="email" aria-required="true" style="background-color: unset" />
                <label asp-for="Input.NewEmail" class="form-label text-white"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button style="background-color: #acafb2; margin-top: 10px; border:none;" id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="mt-3 w-100 btn btn-lg btn-primary">Change email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
